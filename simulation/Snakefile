    BWA_LEVIOSAM_OPTIONS += f' -S mapq:{BWA_MIN_MAPQ}'
if BWA_MIN_ALN_SCORE != '':
    BWA_LEVIOSAM_OPTIONS += f' -S aln_score:{BWA_MIN_ALN_SCORE}'

